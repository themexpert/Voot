{{!< default}}

	<section class="container single-post" role="main">
		<a href="#" class="toggle-nav btn-canvus">
		 	<i class="fa fa-bars"></i>
		 </a>
		{{#post}}
			<article role="article" class="clearfix">
				<header>
					<time datetime="{{date format="YYYY-MM-DD"}}">
						<i class="fa fa-clock-o"></i>
						{{date format="dddd DD MMM YYYY"}}
					</time>
					<h1>
						{{title}}
					</h1>
				</header>
				<div class="content">
					{{content}}
				</div>

				{{#if tags}}
					<div class="tag">
						Tags: {{tags separator=" | "}}
					</div>

				{{/if}}

				<div class="share-post">
					<h4> Share This Post</h4>

					<ul class="social-icon">
						<li>
							<a class="facebook" href="http://facebook.com/share.php?u={{url absolute="true"}}" target="_blank">
								<i class="fa fa-facebook"></i>
							</a>
						</li>
						<li>
							<a class="twitter" href="http://twitter.com/share?text={{encode title}}&url={{url absolute="true"}}"
                                onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                                <i class="fa fa-twitter-square"></i>
                            </a>
						</li>
						<li>
							<a class="google-plus" href="https://plus.google.com/share?url={{url absolute="true"}}" target="_blank">
								<i class="fa fa-google-plus"></i>
							</a>
						</li>
					</ul>

					
				</div>
			</article>

		{{/post}}

		{{#if pagination}}
			<div class="pagination">
				{{{pagination}}}
			</div>
		{{/if}}

</section>
